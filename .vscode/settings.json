{
  "search.exclude": {
    "**/.eslintrc.js": true,
    "**/.gitignore": true,
    "**/.npmignore": true,
    "**/.npmrc": true,
    "**/.editorconfig": true,
    "**/package.json": true,
    "**/package-lock.json": true
  },
  "files.exclude": {},
  "editor.formatOnType": true, //编辑时是否自动格式化
  "editor.formatOnSave": true, //保存时是否自动格式化
  "javascript.validate.enable": false, // 关闭编辑器的代码js检查
  "typescript.validate.enable": false, // 关闭编辑器的代码ts检查
  "typescript.tsdk": "node_modules/typescript/lib", // 手动配置SDK
  "eslint.enable": true // 开启eslint代码检查
}
